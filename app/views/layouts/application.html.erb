<!DOCTYPE html>
<html>
  <head>
    <title><%= content_for?(:title) ? yield(:title) : "Today I Learned" %></title>
    
    <%= stylesheet_link_tag "application" %>
    <%= javascript_include_tag :defaults %>

	<script type="text/javascript" src="http://use.typekit.com/ecw7onn.js"></script>
	<script type="text/javascript">try{Typekit.load();}catch(e){}</script>
    
    <%= csrf_meta_tag %>
    
    <%= yield(:head) %>
    
    
    <script type="text/javascript">
      var _gaq = _gaq || [];
      _gaq.push(['_setAccount', 'UA-1368775-6']);
      _gaq.push(['_trackPageview']);

      (function() {
        var ga = document.createElement('script'); ga.type = 'text/javascript'; ga.async = true;
        ga.src = ('https:' == document.location.protocol ? 'https://ssl' : 'http://www') + '.google-analytics.com/ga.js';
        var s = document.getElementsByTagName('script')[0]; s.parentNode.insertBefore(ga, s);
      })();

    </script>
    
  </head>
  <body>
   
      <div class="ref-box">
          <div id="ref-wrapper">
              <span class="keyword"></span>
              <div id="ref-text" class="rounded5">
                  <span class="text"></span><button id="edit-ref" class="cupid-blue">Edit</button> 
                  <%if not current_user%>
                  <div id="edit-popup" class="rounded5 darkborder gray-shadow">
                   <h3> You must login to edit.</h3>
                    <%=link_to "Sign In", login_path()%> 
                </div>
                  <%end%>
              </div>
              <div id="ref-form-wrapper">
                  <form id="ref-form">
                      <textarea name="text" id="ref-textarea"></textarea>
                      <button class="cupid-blue" id="save">Save</button>
                 </form> 
              </div>
        <button id="ref-close" class="cupid-blue">âœ• Close</button>

         </div>

      </div>

<div id="header-wrapper">
      <div id="header">
    
    <a href="/" id="logo" class="rounded5">
TIL
    </a>
    
    <div id="user-login">
     
    
    <%if current_user%>
        Welcome <strong><%= link_to current_user.name, user_path(current_user.id)%> <span id="karma" class='rounded10'><%=current_user.karma%></span></strong> | <%= link_to "Knowledge" , saved_path(current_user.id)%> | <%= link_to "Sign out", signout_path() %>
    <%else%>
              <%=link_to "Sign In", login_path()%> 
    <%end%>
    </div>
    
  </div>
</div> 
      
    <div id="container" class="rounded10">
        <div id="wrapper">
      <% flash.each do |name, msg| %>
        <%= content_tag :div, msg, :id => "flash_#{name}" %>
      <% end %>
      <%= content_tag :h1, yield(:title) if show_title? %>
      <%= yield %>
      </div>

    </div>

     
